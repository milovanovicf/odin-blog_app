<%= form_with model: [ @article, @article.comments.build ] do |form| %>
  <p>
    <%= form.text_field :commenter, placeholder:"Enter a username"%>
  </p>
  <p>
    <%= form.text_area :body ,placeholder:"Write a comment...",class:"form-control",rows:"3"%>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>